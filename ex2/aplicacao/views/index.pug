extends layout

block content
  h1 Aplicação do CLAV - Exame de PRI 2019/20
  .w3-card-4
    header.w3-container.w3-blue
      h1 Lista de Diplomas
    .w3-container
      table.w3-table-all
          tr.w3-hover-blue
            th Data
            th Tipo
            th Número
            th Sumário
            th ID
          each f in lista
            tr.w3-hover-blue
              td= f.data
              td= f.tipo
              td= f.numero
              td= f.sumario
              td
                a(href="/" + f.id) 
                  =f.id
    footer.w3-container.w3-blue
      address Generated by PRI2019